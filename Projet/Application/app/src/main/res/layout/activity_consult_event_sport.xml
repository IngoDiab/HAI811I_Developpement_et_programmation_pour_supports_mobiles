<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/big_sport"
    tools:context=".ConsultEvent_Sport">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/backLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintWidth_percent="0.05"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/back_icon" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:text="Retour"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintLeft_toRightOf="@+id/imageButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.23" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.95"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintTop_toBottomOf="@+id/backLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutEvent"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/cardBoard"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintHeight_percent="1"
                            app:layout_constraintWidth_percent="1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/favorisButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:background="@android:color/transparent"
                                android:foregroundTint="@color/errorColor"
                                app:srcCompat="@drawable/not_favoris_icon" />

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="TITLE"
                                android:textAlignment="center"
                                android:textColor="@color/mainColor"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="30sp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/nbFavoris"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/mainColor"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_constraintHeight_percent="1"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintWidth_percent=".25" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:gravity="center"
                                    android:text="Utilisateur(s) aime(nt) cet évènement "
                                    android:textColor="@color/mainColor"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    app:layout_constraintHeight_percent="1"
                                    app:layout_constraintLeft_toRightOf="@+id/nbFavoris"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintWidth_percent=".75" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="30sp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/nbInscrits"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:text="0"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/mainColor"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_constraintHeight_percent="1"
                                    app:layout_constraintWidth_percent=".25"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:gravity="center"
                                    android:text="Utilisateur(s) inscrit à cet évènement "
                                    android:textColor="@color/mainColor"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    app:layout_constraintHeight_percent="1"
                                    app:layout_constraintLeft_toRightOf="@+id/nbInscrits"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintWidth_percent=".75" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>

                        <Button
                            android:id="@+id/eventCategorie"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/mainColor"
                            android:ems="10"
                            android:text="Categorie"
                            android:paddingLeft="20dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:id="@+id/desc"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@null"
                                android:ems="10"
                                android:gravity="top"
                                android:hint="Description"
                                android:inputType="text"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:textColorHint="@color/grayColor"
                                app:layout_constrainedWidth="true"/>

                        </androidx.cardview.widget.CardView>

                            <Button
                                android:id="@+id/eventLieu"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:backgroundTint="@color/mainColor"
                                android:ems="10"
                                android:text="Lieu"
                                android:paddingLeft="20dp"/>

                            <Button
                                android:id="@+id/eventDate"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:backgroundTint="@color/mainColor"
                                android:ems="10"
                                android:text="Date"
                                android:paddingLeft="20dp"/>

                        <Button
                            android:id="@+id/eventPrice"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/mainColor"
                            android:ems="10"
                            android:text="Price"
                            android:paddingLeft="20dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:id="@+id/eventSport"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:ems="10"
                                android:hint="Sport"
                                android:inputType="text"
                                android:paddingLeft="20dp"
                                android:textColorHint="@color/grayColor" />


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:id="@+id/eventChampionnat"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:inputType="text"
                                android:paddingLeft="20dp"
                                android:hint="Championnat"
                                android:textColorHint="@color/grayColor" />


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:id="@+id/eventDuree"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:ems="10"
                                android:hint="Durée du match"
                                android:inputType="numberDecimal"
                                android:paddingLeft="20dp"
                                android:textColorHint="@color/grayColor" />


                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/eventInscription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/mainColor"
                                android:text="Inscription" />

                            <Button
                                android:layout_marginLeft="20dp"
                                android:id="@+id/eventSearchSame"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/mainColor"
                                android:text="Rechercher" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>