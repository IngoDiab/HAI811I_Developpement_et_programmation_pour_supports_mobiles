<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/editTitre"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@null"
                android:ems="10"
                android:hint="Titre"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColorHint="@color/grayColor" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/event_favoris_icon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Catégories"
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/favoris_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp"
                        app:srcCompat="@drawable/short_sport" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:text="Sport"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@android:color/transparent"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="4dp"
                        app:srcCompat="@drawable/short_concert" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:text="Concert"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/event_favoris_icon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Dates"
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Entre le "
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/editBegin"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Début"
                    android:inputType="date"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/grayColor" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="et le "
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/editEnd"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Fin"
                    android:inputType="date"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/grayColor" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/event_favoris_icon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Prix"
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Entre "
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/editBegin"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Minimum"
                    android:inputType="date"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grayColor" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="et "
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp">

                <EditText
                    android:id="@+id/editEnd"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Maximum"
                    android:inputType="date"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/grayColor" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="€"
                android:layout_gravity="center"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/mainColor"
            android:text="RECHERCHER" />

    </LinearLayout>
</ScrollView>