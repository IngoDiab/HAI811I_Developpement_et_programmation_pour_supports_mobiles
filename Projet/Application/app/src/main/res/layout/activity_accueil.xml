<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_background">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.66"
            app:layout_constraintWidth_percent="1"
            app:srcCompat="@drawable/r_logo" />

        <Button
            android:id="@+id/connexionButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintWidth_percent="1"
            android:backgroundTint="@color/mainColor"
            android:freezesText="false"
            app:layout_constraintBottom_toTopOf="@+id/inscriptionButton"
            android:text="Connexion" />

        <Button
            android:id="@+id/inscriptionButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintWidth_percent="1"
            android:backgroundTint="@color/mainColor"
            app:layout_constraintBottom_toTopOf="@+id/inscriptionGoogleButton"
            android:freezesText="false"
            android:text="Inscription" />

        <Button
            android:id="@+id/inscriptionGoogleButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintWidth_percent="1"
            android:backgroundTint="@color/mainColor"
            app:layout_constraintBottom_toBottomOf="parent"
            android:freezesText="false"
            android:text="Inscription avec Google"/>

</androidx.constraintlayout.widget.ConstraintLayout>